            </div>
            <div className="info-item">
              <span className="label">Category:</span>
              <span className="value">{preview.comment.category}</span>
            </div>
            <div className="info-item">
              <span className="label">Confidence:</span>
              <span className="value">{Math.round(preview.confidence * 100)}%</span>
            </div>
            <div className="info-item">
              <span className="label">Risk Level:</span>
              <span className={'value ' + (preview.riskLevel === 'low' ? 'risk-low' : preview.riskLevel === 'medium' ? 'risk-medium' : 'risk-high')}>{preview.riskLevel}</span>
            </div>
          </div>

          <div className="preview-description">
            <h4>üìù Description</h4>
            <p>{preview.comment.message}</p>
          </div>

          {showDiff && (
            <div className="diff-preview">
              <div className="diff-header">
                <h4>üîÑ Code Changes</h4>
                <button
                  className="toggle-diff-button"
                  onClick={() => setShowDiff(!showDiff)}
